[core]
	attributesfile = ~/.gitattributes
	whitespace = space-before-tab,trailing-space

[color]
	diff = always
	status = auto
	branch = auto
	interactive = auto
	ui = always
	pager = true

[color "diff"]
	whitespace = magenta reverse

[diff]
	colorMoved = default
	colorMovedWS = allow-indentation-change
	wsErrorHighlight = all

[diff "rspec"]
	xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario)[ \t].*)$"

[interactive]
	diffFilter = delta --features=\"interactive $SYSTEM_THEME\"

[pager]
	diff   = delta --features=\"decorations $SYSTEM_THEME\"
	log    = delta --features=\"decorations $SYSTEM_THEME\"
	reflog = delta --features=\"decorations $SYSTEM_THEME\"
	show   = delta --features=\"decorations $SYSTEM_THEME\"

[delta]
	hyperlinks = true
	navigate = true

[delta "interactive"]
	color-only = true
	keep-plus-minus-markers = true

[delta "decorations"]
	commit-style = yellow
	commit-decoration-style = yellow ul
	hunk-header-style = file line-number syntax
	inspect-raw-lines = true
	keep-plus-minus-markers = true

[delta "dracula"]
	dark = true
	minus-style                   = red       black
	minus-empty-line-marker-style = red       black
	plus-style                    = green     "#282A36"
	plus-empty-line-marker-style  = green     "#282A36"
	minus-non-emph-style          = "#FFB86C" "#282A36"
	plus-non-emph-style           = "#FFB86C" "#282A36"
	minus-emph-style              = "#282A36" "#FFB86C"
	plus-emph-style               = "#282A36" "#FFB86C"

[delta "edge-light"]
	light = true
	minus-style                   = syntax    "#F6E4E4"
	minus-empty-line-marker-style = syntax    "#F6E4E4"
	plus-style                    = syntax    "#E5EEE4"
	plus-empty-line-marker-style  = syntax    "#E5EEE4"
	minus-non-emph-style          = syntax    "#E3EAF6"
	plus-non-emph-style           = syntax    "#E3EAF6"
	minus-emph-style              = "#FAFAFA" "#5079BE"
	plus-emph-style               = "#FAFAFA" "#5079BE"

[delta "gruvbox-material-light"]
	light = true
	minus-style                   = syntax    "#F7D9B9"
	minus-empty-line-marker-style = syntax    "#F7D9B9"
	plus-style                    = syntax    "#DFE1B4"
	plus-empty-line-marker-style  = syntax    "#DFE1B4"
	minus-non-emph-style          = syntax    "#DBDDBF"
	plus-non-emph-style           = syntax    "#DBDDBF"
	minus-emph-style              = "#F2E5BC" "#45707A"
	plus-emph-style               = "#F2E5BC" "#45707A"

[delta "nord"]
	dark = true
	minus-style                   = red    "#3B4252"
	minus-empty-line-marker-style = red    "#3B4252"
	plus-style                    = green  "#3B4252"
	plus-empty-line-marker-style  = green  "#3B4252"
	minus-non-emph-style          = yellow "#3B4252"
	plus-non-emph-style           = yellow "#3B4252"
	minus-emph-style              = blue   brightblack bold
	plus-emph-style               = blue   brightblack bold
